<% layout('layout') %>
<h1 class="mb-4">All Courses</h1>
<a href="/course/new" class="btn btn-primary mb-3">Add New Course</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Price</th>
            <th>Duration</th>
            <th>Start Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(course => { %>
            <tr>
                <td><a href="/courses/<%= course._id %>"><%= course.courseName %></a></td>
                <td>$<%= course.price %></td>
                <td><%= course.duration %></td>
                <td><%= course.courseStartDate.toDateString() %></td>
                <td>
                    <a href="/courses/<%= course._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/courses/<%= course._id %>/delete" method="POST" class="d-inline">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
